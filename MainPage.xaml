<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Piano.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <!-- Title Label -->
        <Label x:Name="titleLabel" Text="Sound to Piano Note Recorder" HorizontalOptions="Center" FontSize="24" Margin="0,0,0,20"/>

        <!-- Record Button -->
        <Button x:Name="recordButton" Text="Press to Record"
                BackgroundColor="#007AFF" TextColor="White" FontSize="20"
                CornerRadius="10" WidthRequest="200" HeightRequest="60"
                Clicked="OnRecordButtonClicked"/>

        <!-- Playback Button -->
        <StackLayout VerticalOptions="End" HorizontalOptions="Center">
            <Button x:Name="playbackButton" Text="Press to Playback Recording"
                    BackgroundColor="#007AFF" TextColor="White" FontSize="20"
                    CornerRadius="10" HeightRequest="60" Margin="0,0,0,20"
                    Clicked="OnPlaybackButtonClicked"/>
            <Label x:Name="playbackStatusLabel" Text="" HorizontalOptions="Center" FontSize="16" />
        </StackLayout>
    </StackLayout>

</ContentPage>
